<Window x:Name="Dock" x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GoGadget" Height="500" Width="60" Topmost="True" ShowInTaskbar="False" WindowStyle="None" Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" AllowDrop="True" AllowsTransparency="True" Background="#00000000" Icon="Rob-Sanders-Gear-Spur-gear.ico">
    <Window.Resources>
        <Storyboard x:Key="DockColorAnimation">
            <ColorAnimation x:Name="DockColorAnimationProperties" Storyboard.TargetProperty="(Border.Background).Color" Duration="0:0:0.8" From="Gray" To="#FF515151"/>
        </Storyboard>
    </Window.Resources>
    <Grid x:Name="DockContainer">
        <Border x:Name="DockBorder" AllowDrop="True" BorderThickness="1,0,0,0" BorderBrush="#99000000" Opacity="0">
            <Border.Background>
                <SolidColorBrush Color="#00252323"/>
            </Border.Background>
        </Border>
        <Grid x:Name="DockContent" AllowDrop="True">
            <!--Dock items in here-->
        </Grid>
    </Grid>
</Window>
