<Window x:Name="MenuWindow" x:Class="Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" MinHeight="40" MinWidth="40" ShowInTaskbar="False" Topmost="True" WindowStyle="None" AllowsTransparency="True" SizeToContent="WidthAndHeight" >
    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" Color="#FFD4D4D4"/>
    </Window.Effect>
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0"/>
    </Window.Background>
    <Grid x:Name="MenuContainer" Margin="5">
        <Grid x:Name="MenuArrow" Width="20" Height="20" VerticalAlignment="Top" HorizontalAlignment="center" Margin="0,4,0,0">
            <Border Background="#FF515151" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="45"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Border.RenderTransform>
            </Border>
        </Grid>
        <Grid x:Name="MenuButtonContainer" Margin="0,10,0,0">
            <Border x:Name="MenuButtonBorder" Background="#FF515151" CornerRadius="5">
                <Grid x:Name="MenuButtonContent" Margin="5">
                    
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
